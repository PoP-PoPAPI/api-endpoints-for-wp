{
    "name": "getpop/api-endpoints-for-wp",
    "type": "library",
    "description": "Add pretty permalinks for the PoP API endpoints, for WordPress",
    "keywords": [
        "PoP",
        "api-endpoints-for-wp"
    ],
    "homepage": "https://github.com/getpop/api-endpoints-for-wp",
    "license": "MIT",
    "authors": [
        {
            "name": "Leonardo Losoviz",
            "email": "leo@getpop.org",
            "homepage": "https://getpop.org"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "require": {
        "php" : "~7.1",
        "getpop/api-endpoints": "dev-master"
    },
    "require-dev": {
        "getpop/api-rest": "dev-master",
        "getpop/api-graphql": "dev-master",
        "phpunit/phpunit": ">=7.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "suggest": {
        "getpop/api-rest": "Provides endpoints for the REST API",
        "getpop/api-graphql": "Provides endpoints for the GraphQL API"
    },
    "autoload": {
        "psr-4": {
            "PoP\\APIEndpointsForWP\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PoP\\APIEndpointsForWP\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
